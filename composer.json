    "keywords": [
        "delaneymethod",
        "flysystem-sharepoint",
        "flysystem",
        "sharepoint",
        "rest",
        "api"
    ],
    "homepage": "https://github.com/delaneymethod/flysystem-sharepoint",
    "license": "MIT",
    "authors": [
        {
            "name": "Sean Delaney",
            "email": "hello@delaneymethod.com",
